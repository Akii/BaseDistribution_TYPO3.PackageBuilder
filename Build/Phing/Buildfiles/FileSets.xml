<project name="FileSets">

	<fileset dir="${project.basedir}" id="files-for-release-archive">
		<exclude name="Build**"/>
		<exclude name="build.xml"/>
		<exclude name="dir_conflicts.prej"/>
		<include name="**"/>
	</fileset>

	<fileset dir="." expandsymboliclinks="true" id="files-php">
		<exclude name="Packages/Framework/Testing/**/*.php"/>
		<include name="Packages/*/*/Classes/**/*.php"/>
	</fileset>

	<fileset dir="." id="files-temporary">
		<exclude name="Data/Temporary"/>
		<exclude name="Data/Logs"/>
		<exclude name="Web/_Resources"/>
		<include name="Data/Temporary/**"/>
		<include name="Data/Logs/**"/>
		<include name="Web/_Resources/**"/>
	</fileset>

	<fileset dir="." expandsymboliclinks="true" id="files-unittests">
		<include name="Packages/Framework/*/Tests/Unit/**/*Test.php"/>
	</fileset>

	<fileset dir="." expandsymboliclinks="true" id="paths-packages">
		<exclude name="."/>
		<exclude name=".."/>
		<include name="Packages/*/*"/>
		<type type="dir"/>
	</fileset>

	<fileset dir="./Packages/Framework/" expandsymboliclinks="true" id="packagekeys-framework">
		<exclude name="."/>
		<exclude name=".."/>
		<include name="*"/>
		<type type="dir"/>
	</fileset>

	<fileset dir="." expandsymboliclinks="true" id="files-docbook-xml">
		<include name="Packages/Framework/*/Documentation/Manual/DocBook/**/*.xml"/>
		<type type="file"/>
	</fileset>

</project>